<Page
    x:Class="ProjectProposal.DifficultyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjectProposal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Name="_grid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" HorizontalAlignment="Right" Width="1280" Height="720" VerticalAlignment="Top">
        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Height="118" Margin="165,91,0,0" TextWrapping="Wrap" Text="Select Difficulty" VerticalAlignment="Top" Width="959" FontSize="72" TextAlignment="Center" Foreground="#FF895151"/>

        <Button x:Name="_btnEasy" Content="Easy" HorizontalAlignment="Left" Height="150" Margin="287,302,0,0" VerticalAlignment="Top" Width="150" Click="OnEasy" Foreground="#FF895151"/>
        <Button x:Name="_btnMedium" Content="Medium" HorizontalAlignment="Left" Height="150" Margin="563,302,0,0" VerticalAlignment="Top" Width="150" Click="OnMedium" Foreground="#FF895151"/>
        <Button x:Name="_btnHard" Content="Hard" HorizontalAlignment="Left" Height="150" Margin="843,302,0,0" VerticalAlignment="Top" Width="150" Click="OnHard" Foreground="#FF895151"/>
    </Grid>
</Page>
